<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <div style="margin-bottom: 30px;margin-top: 30px" class="d-flex flex-row  justify-content-between">
        <h2>Temas</h2>
        <%= link_to 'Nuevo tema', new_subject_path , class: 'btn btn-light btn-sm'%>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= link_to 'Show', subject %></td>
            
            <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>